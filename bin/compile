#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing sox"
VENDOR_DIR="vendor"

mkdir -p $VENDOR_DIR
cd $VENDOR_DIR


curl https://s3.amazonaws.com/wevue-install-files/programs/sox.tar.gz -s -O
tar zxpf $VENDOR_DIR/sox.tar.gz -C $VENDOR_DIR
rm $VENDOR_DIR/sox.tar.gz

echo "installed... ?"